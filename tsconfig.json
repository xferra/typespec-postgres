{
  "compilerOptions": {
    "composite": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "declaration": true,
    "stripInternal": true,
    "noEmitHelpers": false,
    "target": "es2020",
    "lib": ["es2020"],
    "experimentalDecorators": true,
    "newLine": "LF",
    "outDir": "dist",
    "rootDir": ".",
    "tsBuildInfoFile": "temp/tsconfig.tsbuildinfo",
    "types": ["node", "mocha"],
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts", "test/**/*.ts", ".eslintrc.cjs"],
  "exclude": ["dist", "node_modules", "temp", "tsp-output"]
}
